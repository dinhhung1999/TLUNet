<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tlunet">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.TLUNet">
        <activity android:name=".ui.subject.SubjectDetailActivity"></activity>
        <activity android:name=".ui.forgotPassword.ForgotPasswordActivity" />
        <activity android:name=".ui.category.categorydetail.CategoryDetailActivity" />
        <activity android:name=".ui.category.CategoryActivity" />
        <activity android:name=".ui.home.HomeActivity" />
        <activity android:name=".ui.createaccount.CreateAccountActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>