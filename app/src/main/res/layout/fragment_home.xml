<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.tabHome.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/llAppbar"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/gradient_theme"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp">
                    <SearchView
                        android:id="@+id/svSearch"
                        android:iconifiedByDefault="false"
                        android:queryHint="@string/hintSearch"
                        style="@style/textH2"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@color/white"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/logo"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/textBoldWhiteH3"
                        android:text="@string/category"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMoreCategory"
                        android:clickable="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/textH0"
                        android:textColor="@color/white"
                        android:text="@string/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvCategory"
                    android:nestedScrollingEnabled="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                app:layout_constraintTop_toBottomOf="@+id/llAppbar"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:background="@color/bgColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/titleCNTT"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/textBoldDarkH3"
                        android:text="@string/faculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/color_app"
                        app:layout_constraintStart_toEndOf="@+id/titleCNTT"
                        app:layout_constraintLeft_toRightOf="@+id/titleCNTT"
                        style="@style/textBoldDarkH3"
                        android:text="@string/technology"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMoreTech"
                        android:layout_marginRight="@dimen/_15sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/textH0"
                        android:textColor="@color/color_app"
                        android:text="@string/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvCNTT"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@+id/titleCNTT"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:background="@color/bgColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/titleKT"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/textBoldDarkH3"
                        android:text="@string/faculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/color_app"
                        app:layout_constraintStart_toEndOf="@+id/titleKT"
                        app:layout_constraintLeft_toRightOf="@+id/titleKT"
                        style="@style/textBoldDarkH3"
                        android:text="@string/economic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMoreEconomic"
                        android:layout_marginRight="@dimen/_15sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/textH0"
                        android:textColor="@color/color_app"
                        android:text="@string/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvKT"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@+id/titleKT"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:background="@color/bgColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/titleKTo"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/textBoldDarkH3"
                        android:text="@string/faculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/color_app"
                        app:layout_constraintStart_toEndOf="@+id/titleKTo"
                        app:layout_constraintLeft_toRightOf="@+id/titleKTo"
                        style="@style/textBoldDarkH3"
                        android:text="@string/accounting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMoreAccount"
                        android:layout_marginRight="@dimen/_15sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/textH0"
                        android:textColor="@color/color_app"
                        android:text="@string/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvKTo"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@+id/titleKTo"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:background="@color/bgColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:id="@+id/titleKTCK"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        style="@style/textBoldDarkH3"
                        android:text="@string/faculty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/color_app"
                        app:layout_constraintStart_toEndOf="@+id/titleKTCK"
                        app:layout_constraintLeft_toRightOf="@+id/titleKTCK"
                        style="@style/textBoldDarkH3"
                        android:text="@string/mechanical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvMoreMechanical"
                        android:layout_marginRight="@dimen/_15sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        style="@style/textH0"
                        android:textColor="@color/color_app"
                        android:text="@string/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvKTCK"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginTop="@dimen/_5sdp"
                        app:layout_constraintTop_toBottomOf="@+id/titleKTCK"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</FrameLayout>